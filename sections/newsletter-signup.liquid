{% liquid
  assign badge_text = section.settings.badge_text
  assign title = section.settings.title
  assign description = section.settings.description
  assign button_text = section.settings.button_text
  assign padding_top = section.settings.padding_top | default: 96
  assign padding_bottom = section.settings.padding_bottom | default: 96
%}

<style>
  .newsletter-signup {
    padding: {{ padding_top }}px 2rem {{ padding_bottom }}px;
    background: var(--primary, #1d4035);
    color: var(--warm-white, #fefdfb);
  }

  .newsletter-content {
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
  }

  .newsletter-badge {
    display: inline-block;
    background: var(--accent, #b85a1f);
    color: var(--warm-white, #fefdfb);
    padding: 0.6rem 1.25rem;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    letter-spacing: 0.02em;
  }

  .newsletter-content h2 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    color: var(--warm-white, #fefdfb);
    font-weight: 800;
    line-height: 1.2;
  }

  .newsletter-content > p {
    font-size: 1.25rem;
    color: var(--sand, #e8e4dc);
    margin-bottom: 3rem;
    line-height: 1.7;
  }

  .newsletter-form {
    display: flex;
    gap: 1rem;
    max-width: 500px;
    margin: 0 auto;
    align-items: flex-start;
  }

  .newsletter-input {
    flex: 1;
    padding: 1rem 1.5rem;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    font-size: 1rem;
    background: rgba(255, 255, 255, 0.1);
    color: var(--warm-white, #fefdfb);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--accent, #b85a1f);
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 0 0 0 3px rgba(184, 90, 31, 0.2);
  }

  .newsletter-submit {
    padding: 1rem 2rem;
    background: var(--accent, #b85a1f);
    color: var(--warm-white, #fefdfb);
    border: 2px solid var(--accent, #b85a1f);
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .newsletter-submit:hover {
    background: #9a4a15;
    border-color: #9a4a15;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(184, 90, 31, 0.4);
  }

  .newsletter-note {
    margin-top: 2rem;
    font-size: 0.875rem;
    color: var(--stone, #d1cbc1);
    font-style: italic;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .newsletter-signup {
      padding: 64px 1.5rem;
    }

    .newsletter-content h2 {
      font-size: 2rem;
    }
    
    .newsletter-content > p {
      font-size: 1.125rem;
    }
    
    .newsletter-form {
      flex-direction: column;
      max-width: 400px;
    }
    
    .newsletter-submit {
      width: 100%;
    }
  }
</style>

<section class="newsletter-signup">
  <div class="newsletter-content">
    {% if badge_text != blank %}
      <span class="newsletter-badge">{{ badge_text }}</span>
    {% endif %}
    
    <h2>{{ title }}</h2>
    
    {% if description != blank %}
      <p>{{ description }}</p>
    {% endif %}

    <form action="{{ routes.root_url }}contact#contact_form" method="post" id="contact_form" accept-charset="UTF-8" class="newsletter-form">
      <input type="hidden" name="form_type" value="customer">
      <input type="hidden" name="utf8" value="âœ“">
      
      <input 
        type="email" 
        name="contact[email]" 
        placeholder="Enter your email address" 
        required 
        class="newsletter-input"
        id="newsletter-email"
      >
      
      <input type="hidden" name="contact[tags]" value="newsletter,town-hall">
      
      <button type="submit" class="newsletter-submit">
        {{ button_text | default: "Subscribe Now" }}
      </button>
    </form>
    
    <p class="newsletter-note">
      We respect your privacy. Unsubscribe at any time.
    </p>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter Signup",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Stay Connected"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Get Town Hall Updates"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Never miss a session. Get monthly reminders, topic previews, and exclusive insights delivered to your inbox."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe Now"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 8,
      "label": "Top Padding",
      "default": 96
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 8,
      "label": "Bottom Padding",
      "default": 96
    }
  ],
  "presets": [
    {
      "name": "Newsletter Signup"
    }
  ]
}
{% endschema %}