{% comment %}
  Everyday AI Footer
  Branded footer with contact information and links
{% endcomment %}

<footer class="everyday-ai-footer" role="contentinfo">
  <div class="footer-container">
    <!-- Main Footer Content -->
    <div class="footer-main">
      <div class="footer-brand">
        <div class="footer-logo">
          {% if settings.logo %}
            <img src="{{ settings.logo | image_url: width: 120 }}" 
                 alt="{{ shop.name }}" 
                 class="footer-logo-img"
                 width="120" 
                 height="auto">
          {% else %}
            <h3 class="footer-title">{{ settings.site_title | default: shop.name }}</h3>
            {% if settings.site_subtitle %}
              <p class="footer-subtitle">{{ settings.site_subtitle }}</p>
            {% endif %}
          {% endif %}
        </div>
        
        {% if settings.site_tagline %}
          <p class="footer-tagline">{{ settings.site_tagline }}</p>
        {% endif %}
      </div>
      
      <!-- Quick Links -->
      <div class="footer-links">
        <h4>Quick Links</h4>
        <ul>
          <li><a href="{{ routes.root_url }}">Home</a></li>
          <li><a href="{{ settings.about_keith_link | default: '#about-keith' }}">About Keith</a></li>
          <li><a href="{{ settings.town_hall_link | default: '#town-hall' }}">Town Hall</a></li>
          <li><a href="{{ routes.collections_url }}">Shop</a></li>
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div class="footer-contact">
        <h4>Connect</h4>
        <ul>
          <li>
            <i class="fas fa-map-marker-alt"></i>
            Newark, NJ & Online
          </li>
          <li>
            <i class="fas fa-calendar"></i>
            Monthly Town Hall
          </li>
          <li>
            <i class="fas fa-envelope"></i>
            <a href="#newsletter-signup">Join Newsletter</a>
          </li>
        </ul>
      </div>
      
      <!-- Shop Info -->
      <div class="footer-shop">
        <h4>Shop</h4>
        <ul>
          <li><a href="{{ routes.policies_privacy_policy_url }}">Privacy Policy</a></li>
          <li><a href="{{ routes.policies_terms_of_service_url }}">Terms of Service</a></li>
          <li><a href="{{ routes.policies_refund_policy_url }}">Refund Policy</a></li>
          <li><a href="{{ routes.cart_url }}">Cart</a></li>
        </ul>
      </div>
    </div>
    
    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-copyright">
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
        <p class="powered-by">Powered by Everyday AI Community</p>
      </div>
      
      <div class="footer-social">
        <!-- Add social links if needed -->
        {% if settings.social_twitter_link %}
          <a href="{{ settings.social_twitter_link }}" class="social-link" aria-label="Twitter">
            <i class="fab fa-twitter"></i>
          </a>
        {% endif %}
        
        {% if settings.social_linkedin_link %}
          <a href="{{ settings.social_linkedin_link }}" class="social-link" aria-label="LinkedIn">
            <i class="fab fa-linkedin"></i>
          </a>
        {% endif %}
        
        {% if settings.social_youtube_link %}
          <a href="{{ settings.social_youtube_link }}" class="social-link" aria-label="YouTube">
            <i class="fab fa-youtube"></i>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

<style>
  .everyday-ai-footer {
    background: var(--primary, #1d4035);
    color: white;
    padding: 3rem 0 1rem;
    margin-top: 4rem;
  }
  
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .footer-main {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .footer-brand {
    padding-right: 1rem;
  }
  
  .footer-title {
    color: white;
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
  }
  
  .footer-subtitle {
    font-size: 0.875rem;
    opacity: 0.8;
    margin: 0 0 1rem 0;
    letter-spacing: 1px;
  }
  
  .footer-tagline {
    font-size: 0.9rem;
    opacity: 0.9;
    margin: 1rem 0 0 0;
    line-height: 1.5;
  }
  
  .footer-logo-img {
    max-height: 60px;
    width: auto;
    margin-bottom: 1rem;
    filter: brightness(0) invert(1); /* Make logo white */
  }
  
  .footer-links h4,
  .footer-contact h4,
  .footer-shop h4 {
    color: var(--accent, #b85a1f);
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
  }
  
  .footer-links ul,
  .footer-contact ul,
  .footer-shop ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li,
  .footer-contact li,
  .footer-shop li {
    margin-bottom: 0.5rem;
  }
  
  .footer-links a,
  .footer-contact a,
  .footer-shop a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer-links a:hover,
  .footer-contact a:hover,
  .footer-shop a:hover {
    color: var(--accent, #b85a1f);
  }
  
  .footer-contact i {
    margin-right: 0.5rem;
    color: var(--accent, #b85a1f);
    width: 16px;
  }
  
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .footer-copyright p {
    margin: 0.25rem 0;
    font-size: 0.875rem;
    opacity: 0.8;
  }
  
  .powered-by {
    font-size: 0.75rem;
    opacity: 0.6;
  }
  
  .footer-social {
    display: flex;
    gap: 1rem;
  }
  
  .social-link {
    color: rgba(255, 255, 255, 0.6);
    font-size: 1.25rem;
    transition: color 0.3s ease;
  }
  
  .social-link:hover {
    color: var(--accent, #b85a1f);
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }
    
    .footer-brand {
      padding-right: 0;
    }
    
    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
  
  @media (max-width: 480px) {
    .everyday-ai-footer {
      padding: 2rem 0 1rem;
    }
    
    .footer-container {
      padding: 0 1rem;
    }
  }
</style>